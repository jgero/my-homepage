.PHONY: dev build_dev run_dev

dev: build_dev run_dev

build_dev:
	docker build \
		-t my-webpage/portfolio:dev \
		-f ./container/dev.Dockerfile \
		.

run_dev:
	docker run \
		--rm \
		--tty \
		-v $(PWD)/src/:/app/src/ \
		-v $(PWD)/static/:/app/static/ \
		-v $(PWD)/rollup.config.js:/app/rollup.config.js \
		-p 3000:3000 \
		-p 10000:10000 \
		my-webpage/portfolio:dev
